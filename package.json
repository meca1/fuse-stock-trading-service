{
  "name": "fuse-stock-trading-service",
  "version": "1.0.0",
  "description": "Servicio de trading de acciones usando Serverless Framework",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "dev": "serverless offline",
    "deploy": "serverless deploy",
    "deploy:prod": "serverless deploy --stage prod",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "is-ci || husky install",
    "db:init": "ts-node src/db/init.ts",
    "db:migrate": "dbmate up",
    "db:migrate:create": "dbmate new",
    "db:migrate:status": "dbmate status",
    "db:migrate:rollback": "dbmate rollback",
    "db:migrate:prod": "node scripts/migrations/migrate.js",
    "dynamodb:init": "node scripts/local/init-dynamodb.js",
    "dynamodb:init:local": "bash scripts/local/init-dynamodb.sh",
    "dynamodb:list": "node scripts/utils/list-dynamodb-tables.js",
    "dynamodb:scan": "node scripts/utils/scan-table.js",
    "local:setup": "bash scripts/local/init.sh",
    "build": "tsc"
  },
  "keywords": [],
  "author": "meca1 <drramosdev@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@types/aws-lambda": "^8.10.149",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.2",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.11.14",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "esbuild": "^0.25.3",
    "esbuild-node-externals": "^1.18.0",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "husky": "^9.1.7",
    "is-ci": "^3.0.1",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.1",
    "nodemon": "^3.1.0",
    "prettier": "^3.5.3",
    "serverless": "^3.40.0",
    "serverless-dotenv-plugin": "^6.0.0",
    "serverless-esbuild": "^1.55.0",
    "serverless-offline": "^12.0.4",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.0.0",
    "@aws-sdk/lib-dynamodb": "^3.0.0",
    "aws-lambda": "^1.0.7",
    "axios": "^1.9.0",
    "axios-retry": "^4.5.0",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "nodemailer": "^6.10.1",
    "pg": "^8.15.6",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7",
    "serverless-http": "^3.2.0",
    "zod": "^3.24.3"
  }
}
