{
  "name": "fuse-stock-trading-service",
  "version": "1.0.0",
  "description": "Servicio de trading de acciones usando Serverless Framework",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "dev": "serverless offline --stage local",
    "deploy:prod": "serverless deploy --stage prod",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "is-ci || husky install",
    "db:init": "ts-node src/db/init.ts",
    "db:migrate": "dbmate up",
    "db:migrate:create": "dbmate new",
    "db:migrate:status": "dbmate status",
    "db:migrate:rollback": "dbmate rollback",
    "db:migrate:prod": "node scripts/migrations/migrate.js",
    "dynamodb:init": "node scripts/local/init-dynamodb.js",
    "report:daily": "node scripts/local/run-daily-report.js",
    "build": "tsc"
  },
  "keywords": [],
  "author": "meca1 <drramosdev@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@types/aws-lambda": "^8.10.149",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.2",
    "@types/pg": "^8.11.14",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "esbuild": "^0.25.3",
    "esbuild-node-externals": "^1.18.0",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "husky": "^9.1.7",
    "is-ci": "^3.0.1",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.1",
    "prettier": "^3.5.3",
    "serverless": "^3.40.0",
    "serverless-dotenv-plugin": "^6.0.0",
    "serverless-esbuild": "^1.55.0",
    "serverless-offline": "^12.0.4",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.804.0",
    "@aws-sdk/client-ses": "^3.803.0",
    "@aws-sdk/lib-dynamodb": "^3.0.0",
    "@aws-sdk/util-dynamodb": "^3.370.0",
    "@middy/core": "^5.5.1",
    "@middy/http-error-handler": "^5.5.1",
    "@middy/http-json-body-parser": "^5.0.0",
    "aws-lambda": "^1.0.7",
    "aws-sdk": "^2.1692.0",
    "axios": "^1.4.0",
    "axios-retry": "^4.5.0",
    "dotenv": "^16.3.1",
    "dynamoose": "^3.2.0",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.10.1",
    "pg": "^8.7.1",
    "winston": "^3.10.0",
    "zod": "^3.24.3"
  }
}
