{
  "compilerOptions": {
    "target": "es2020",
    "strict": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "rootDir": "./",
    "outDir": ".build"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", ".serverless", ".build", "dist", "**/*.test.ts"]
}
